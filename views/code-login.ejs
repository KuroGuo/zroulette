<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Zspin</title>
    <link rel="shortcut icon" href="/favicon.png">
    <link rel="stylesheet" href="/style/core.css">
    <link rel="stylesheet" href="/style/login.css">
    <style>
      .button-in-textbox {
        color: #2db556;
        cursor: pointer;
        border: 1px solid #2db556;
        border-radius: 4px;
        padding: 1px 2px;
        font-size: 12px;
        margin-right: 6px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
                user-select: none;
      }
    </style>
  </head>
  <body>
    <div class="page" id="app">
      <div class="container">
        <div class="title"></div>
        <form class="form">
          <div class="form-title">LOG IN TO YOUR ACCOUNT</div>
          <div class="textbox">
            <span class="textbox-label">Email:</span>
            <input name="email" type="email" value="<%= email %>" />
          </div>
          <div class="textbox">
            <span class="textbox-label">Code:</span>
            <input name="code" />
            <span class="button-in-textbox" @click="sendCode">SEND</span>
          </div>
          <span class="button button-login">LOG IN</span>
        </form>
      </div>
    </div>

    <script src="/vue.js"></script>
    <script src="/promise.js"></script>
    <script src="/fetch.js"></script>
    <script>
      var app = new Vue({
        el: '#app',
        data: {
          showTextboxCode: false
        },
        methods: {
          sendCode: function () {
            fetch('/api/sendemail')
              .then(function (res) {
                return res.text()
              })
              .then(function (text) {
                alert(text)
              })
          }
        }
      })
    </script>
  </body>
</html>
