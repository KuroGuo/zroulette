<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no" />
    <title><%= appName %></title>
    <link rel="shortcut icon" href="/favicon.png" />
    <link rel="stylesheet" href="/style/core.css" />
    <style>
      .form-title {
        margin-bottom: 20px;
      }
      .textbox {
        margin-bottom: 10px;
      }
      .button-claim {
        margin-top: 10px;
      }
      .form {
        padding-bottom: 12px;
      }
    </style>
  </head>
  <body>
    <div class="page" id="app">
      <div class="container">
        <div class="title"></div>
        <form class="form" method="post">
          <div class="form-title monospace">REWARDS: <%= tShirt %> T-Shirt</div>
          <div class="textbox">
            <input
              id="input_address"
              class="input"
              name="address"
              required="required"
              placeholder="Address"
              size="100"
              autofocus="autofocus" />
          </div>
          <div class="textbox">
            <input
              id="input_receiver"
              class="input"
              name="receiver"
              required="required"
              placeholder="Receiver" />
          </div>
          <div class="textbox">
            <input
              id="input_phone"
              class="input"
              name="phone"
              required="required"
              placeholder="Phone" />
          </div>
          <input id="button-submit" type="submit" style="display: none;" />
          <span class="button button-claim" onclick="submit()">CLAIM</span>
          <div class="bottom-links">
            <a class="link" href="/claim/history">HISTORY</a>
            <a class="link" href="/">BACK</a>
          </div>
        </form>
      </div>
    </div>

    <script>
      var inputAddress = document.querySelector('#input_address')
      var inputReceiver = document.querySelector('#input_receiver')
      var inputPhone = document.querySelector('#input_phone')

      inputAddress.value = localStorage.claimAddress || ''
      inputReceiver.value = localStorage.claimReceiver || ''
      inputPhone.value = localStorage.claimPhone || ''

      function submit() {
        localStorage.claimAddress = inputAddress.value
        localStorage.claimReceiver = inputReceiver.value
        localStorage.claimPhone = inputPhone.value
        var buttonSubmit = document.querySelector('#button-submit')
        buttonSubmit.click()
      }
    </script>
  </body>
</html>
